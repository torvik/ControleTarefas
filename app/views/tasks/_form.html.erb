<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<br />
  <div class="field">
    <%= f.label :Descrição %><br />
    <%= f.text_area :description %>
  </div><br />
  <div class="field">
    <%= f.label :Status %>
    <%= f.select :status, (["Pendente", "Em Andamento","Concluido"]) %><br />
  </div><br />
  <div class="field">
    <%= f.label :Autor %>
    <%= f.select :author_id, @authors.collect {|a| [a.name, a.id]} %><br />
  </div><br />
  <div class="field">
    <%= f.label :Categoria %>
    <%= f.select :category_id, @categories.collect { |c| [c.name, c.id]} %><br />
  </div><br />
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
